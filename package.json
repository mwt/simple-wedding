{
    "title": "Matthew and Maria Wedding Website",
    "name": "matthewandmaria.com",
    "version": "8.0.0",
    "scripts": {
        "build": "npm run clean && npm run build:scss && npm run build:assets && npm run build:pug",
        "build:assets": "node scripts/build-assets.js",
        "build:pug": "node scripts/build-pug.js",
        "build:scripts": "node scripts/build-scripts.js",
        "build:scss": "node scripts/build-scss.js",
        "purgecss": "npm run build && purgecss -v -keyframes -o ./dist/css/styles.css --css ./dist/css/styles.css --content ./dist/en/index.html ./dist/en/album/index.html \"$(npm root)/simple-lightbox/dist/simpleLightbox.js\"",
        "clean": "node scripts/clean.js",
        "start": "npm run build && node scripts/start.js",
        "start:debug": "npm run build && node scripts/start-debug.js",
        "deploy:text": "rclone sync -v --ignore-times --exclude /assets/ --disable PartialUploads --no-update-dir-modtime ./dist/ wedding-site:",
        "deploy:assets": "rclone sync -v --size-only --disable PartialUploads --no-update-dir-modtime ./dist/assets/ wedding-site:/assets/",
        "deploy:cdn": "wedding-site-purge.sh",
        "deploy": "echo 'Deploying text files...' && npm run deploy:text && echo 'Deploying asset files...' && npm run deploy:assets && echo 'Purging CDN...' && npm run deploy:cdn"
    },
    "description": "Wedding website in Bootstrap. Based on Grayscale by Start Bootstrap.",
    "keywords": [
        "css",
        "sass",
        "html",
        "responsive",
        "theme",
        "template"
    ],
    "homepage": "https://matthewandmaria.com",
    "bugs": {
        "url": "https://github.com/mwt/simple-wedding/issues",
        "email": "hello@matthewandmaria.com"
    },
    "license": "MIT",
    "author": "Matthew Thomas",
    "contributors": [
        "Matthew Thomas (https://www.matthewthom.as/)"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mwt/simple-wedding.git"
    },
    "dependencies": {
        "bootstrap": "^5.3.7",
        "simple-lightbox": "^2.1.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "avif": "^0.5.3",
        "browser-sync": "^3.0.4",
        "chokidar": "^4.0.3",
        "concurrently": "^9.2.0",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "pug": "^3.0.3",
        "purgecss": "^7.0.2",
        "sass": "^1.90.0",
        "shelljs": "^0.10.0",
        "uglify-js": "^3.19.3",
        "upath": "^2.0.1"
    }
}
